version: '3.7'

services:
  redis:
    image: bitnami/redis:latest
    environment:
      REDIS_PASSWORD: 'test_password'
    ports:
      - '6379:6379'

  postgres:
    image: postgres:latest
    environment:
      POSTGRES_DB: 'test_db'
      POSTGRES_USER: 'test_user'
      POSTGRES_PASSWORD: 'test_password'
    ports:
      - '5432:5432'
